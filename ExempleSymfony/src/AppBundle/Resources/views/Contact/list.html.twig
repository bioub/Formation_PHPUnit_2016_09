{% extends "::base.html.twig" %}

{% block title %}Liste des contacts{% endblock %}

{% block body %}
    <h1>Liste des contacts</h1>
    <ul>
        {% for c in contacts %}
        <li>
            <a href="{{ path('app_contact_show', {id: c.id}) }}">
                {{ c.prenom }} {{ c.nom }}
            </a>
        </li>
        {% endfor %}
    </ul>
{% endblock %}
